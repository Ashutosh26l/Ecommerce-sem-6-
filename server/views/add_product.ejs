<%- include("partials/header", { title: "Add Product" }) %>

<section class="min-h-screen bg-slate-100">
  <div class="max-w-4xl mx-auto px-6 py-10">
    <div class="flex items-center justify-between mb-6">
      <a href="/products/allProducts" class="text-slate-600 hover:text-slate-900 font-medium">Back to Products</a>
      <span class="text-sm px-3 py-1 rounded-full border border-slate-300 text-slate-700">Create Product</span>
    </div>

    <div class="bg-white rounded-2xl shadow p-8">
      <h1 class="text-2xl font-bold text-slate-900">Add New Product</h1>
      <p class="text-slate-500 mt-1">Fill details below to add product to your inventory.</p>

      <form class="mt-8 space-y-5" method="POST" action="/products/new">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div>
          <label class="block text-sm font-medium text-slate-700">Name</label>
          <input type="text" name="name" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500" required />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700">Description</label>
          <textarea name="description" rows="3" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500"></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          <div>
            <label class="block text-sm font-medium text-slate-700">Date Created (year or timestamp)</label>
            <input type="number" name="dateCreated" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700">Warranty (years)</label>
            <input type="number" name="warranty" min="0" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500" required />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          <div>
            <label class="block text-sm font-medium text-slate-700">Price</label>
            <input type="number" name="price" min="0" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700">Quantity</label>
            <input type="number" name="quantity" min="0" value="0" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500" required />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700">Image URL or Path</label>
          <input type="text" name="image" class="mt-2 w-full rounded-lg border border-slate-300 px-4 py-2 outline-none focus:border-indigo-500" />
        </div>

        <div class="flex gap-3 pt-2">
          <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 rounded-lg transition-colors">
            Add Product
          </button>
          <a href="/products/allProducts" class="flex-1 text-center bg-slate-900 hover:bg-slate-800 text-white font-medium py-3 rounded-lg transition-colors">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
